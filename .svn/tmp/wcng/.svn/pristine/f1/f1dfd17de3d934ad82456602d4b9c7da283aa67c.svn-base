<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.miclir.lockmypass"
    android:versionCode="1"
    android:versionName="1.0" >
    <uses-sdk
        android:minSdkVersion="8" />
    <application
        android:icon="@drawable/lock_icon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
        <activity
            android:name="SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="LoginActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="CategoriesActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="SettingsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="PasswordGeneratorActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="RecordDetailsActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="RecordsListActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".IconsGridActivity"
            android:screenOrientation="portrait" >
        </activity>
        <provider
            android:name=".datalayer.PasswordsProvider"
            android:authorities="com.miclir.lockmypass.datalayer.provider.lockMyPassdb" >
        </provider>
    </application>
</manifest>